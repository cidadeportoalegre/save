<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
	<converter>
		<description>Converts a Double or Long to a BigDecimal value</description>
		<converter-for-class>java.math.BigDecimal</converter-for-class>
		<converter-class>br.com.procempa.utils.converter.BigDecimalConverter</converter-class>
	</converter>
	<converter>
		<description>Converts empty String to a null value</description>
		<converter-for-class>java.lang.String</converter-for-class>
		<converter-class>br.com.procempa.utils.converter.EmptyToNullConverter</converter-class>
	</converter>		
	<application>
		<!-- <view-handler>com.sun.facelets.FaceletViewHandler</view-handler> -->
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>

</faces-config>
